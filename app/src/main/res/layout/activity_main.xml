<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:Android="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="#EFEFEF">

    <include
        android:layout_width="match_parent"
        android:layout_height="48dp"
        layout="@layout/title_bar_casher"
        android:id="@+id/title_bar" />
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="50dp">

        <EditText
            android:paddingLeft="15dp"
            android:textCursorDrawable="@drawable/cursor"
            android:layout_gravity="center"
            android:gravity="center_vertical|left"
            android:id="@+id/editMemberNo"
            android:layout_width="0dp"
            android:textSize="12sp"
            android:textColorHint="#999999"
            android:textColor="#444444"
            android:hint="输入会员卡号/手机号码"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@drawable/consumption_corner"
            android:layout_height="30dp" />
        <Button
            android:gravity="center"
            android:id="@+id/buttonScan"
            android:layout_gravity="center"
            android:layout_width="75dp"
            android:layout_height="32dp"
            android:text="扫一扫"
            android:textSize="15dp"
            android:textColor="#ffffff"
            android:layout_marginRight="10dp"
            android:background="@drawable/str_login"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        android:background="@drawable/consumption_corner"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:id="@+id/linearLayout">
        <Button
            android:gravity="center_vertical"
            android:visibility="invisible"
            android:text=""
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            android:background="@drawable/selector_settle"
            android:textColor="@android:color/white"
            android:layout_width="32dp"
            android:layout_height="32dp"
            />

        <EditText
            android:maxLength="9"
            android:textCursorDrawable="@drawable/cursor"
            android:textColor="#444444"
            android:textColorHint="#ffffff"
            android:layout_gravity="center"
            android:text="0"
            android:background="@null"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:lines="2"
            android:layout_height="match_parent"
            android:id="@+id/editMemberAmount"
            android:inputType="numberDecimal"
            android:numeric="decimal"
            android:textSize="40sp"
            android:gravity="center"
            android:enabled="true"

            />
        <Button
            android:gravity="center"
            android:text=""
            android:layout_marginRight="10dp"
            android:layout_gravity="center"
            android:background="@drawable/selector_settle"
            android:id="@+id/buttonToPay"
            android:textColor="@android:color/white"
            android:layout_width="32dp"
            android:layout_height="32dp"
            />
    </LinearLayout>






    <GridView
        android:horizontalSpacing="2dp"
        android:verticalSpacing="2dp"
        android:inputType="numberDecimal"
        android:editable="false"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:numColumns="3"
        android:id="@+id/gridview"></GridView>




    <!--
    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/oto_num_keyboard" />-->

</LinearLayout>
